    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "keywords": [
    "job-portal",
    "jobs",
    "careers",
    "employment"
  ],
  "author": "JobPortal Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
